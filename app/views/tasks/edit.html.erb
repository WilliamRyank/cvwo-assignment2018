<h1 class="heading">Edit task</h1>

<%= form_for @task do |f| %>
<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <div class="form-group">
        <%= f.label :task_name, "Task Name" %><br>
        <%= f.text_field :task_name, class: "form-control submit-form", placeholder: "Enter New Task"%>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="form-group">
          <%= f.label :task_description, "Task Description" %><br>
          <%= f.text_field :task_description, class: "form-control submit-form", placeholder: "Add Task Description"%>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="form-group">
          <%= f.label :category, "Category" %><br>
          <%= f.text_field :category, class: "form-control submit-form", value: "#{@task.category.name}", text: @task.category.name, placeholder: "Choose category"%>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
            <%= f.label :task_due, "Task Due" %><br>
            <%= date_select :task, :task_due %><br>
            <%= f.submit "Edit Task", class:"btn-primary btn submit-btn" %>
            <% end %>
        </div>
      </div>
</div>
